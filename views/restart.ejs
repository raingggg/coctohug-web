<div class="page-wrapper">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>
          <%= __('general.blockchain') %>
        </td>
        <td>
          <%= __('general.actions') %>
        </td>
        <td>
          <%= __('general.updatedAt') %>
        </td>
        <td>
          <%= __('general.hostname') %>
        </td>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(dt, index){ %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= dt.blockchain %>
          </td>
          <td><button class="btn btn-outline-success restart" data-hostname="<%= dt.hostname %>"
              data-blockchain="<%= dt.blockchain %>">
              <%= __('leftbar.restart') %>
            </button></td>
          <td>
            <%= dt.updatedAt.toLocaleString("en-US", {hour12: false}) %>
          </td>
          <td>
            <%= dt.hostname %>
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>
</div>
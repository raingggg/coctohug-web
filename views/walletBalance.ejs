<div class="page-wrapper">
  <div class="container badge bg-success">
    <span>
      <%= __('balance.total_dollar_all_coins') %>
    </span>
    <span>
      $<%= allCoinsDollars %>
    </span>
    <span>
      --- <%= __('general.updatedAt') %>
        <%= lastUpdatedAt.toLocaleString("en-US", {hour12: false}) %>
    </span>
  </div>
  &nbsp;<input class="search blockchain-fuzzy-search" type="search" data-column="1"
    placeholder='(blockchain; fuzzy search... try "flax")'> <br>
  <table class="table table-striped table-hover" id="balanceTabTable">
    <thead>
      <tr>
        <th class="se_no">
          #
        </th>
        <th class="blockchain">
          <%= __('general.blockchain') %>
        </th>
        <th class="balance">
          <%= __('balance.balance') %>
        </th>
        <th class="coin_symbol">
          <%= __('review.token_name') %>
        </th>
        <th class="price">
          <%= __('balance.price') %>
        </th>
        <th class="total_price">
          <%= __('balance.total_price') %>
        </th>
        <th class="address">
          <%= __('balance.address') %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(dt, index){ %>
        <tr>
          <td class="se_no">
            <input type="checkbox" name="wbcheck" value="<%= index %>" data-address="<%= dt.address %>"
              data-blockchain="<%= dt.blockchain %>" />
            <%= index + 1 %>
          </td>
          <td class="blockchain">
            <img src="images/logos/<%= dt.blockchain %>-min.png" alt="<%= dt.blockchain %>" width="20" height="20">
            <b>
              <%= dt.blockchain %>
            </b>
          </td>
          <td class="balance">
            <%= dt.balance %>
          </td>
          <td class="coin_symbol">
            <b>
              <%= dt.symbol %>
            </b>
          </td>
          <td class="price">
            <%= dt.price %>
          </td>
          <td class="total_price">
            <%= dt.total_price %>
          </td>
          <td class="address">
            <span class="d-inline-block text-truncate" style="max-width: 150px;">
              <%= dt.address %>
            </span>
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>

  <div class="container">
    <div class="row">
      <div class="col-2">
        <button class="btn btn-outline-success" id="btnWalletBalanceRemove">
          <%= __('hands.remove_selected') %>
        </button>
      </div>
      <div class="col-1">
        <input class="form-control me-2 new-connection" type="text" placeholder="chia" id="newBalanceName">
      </div>
      <div class="col-7">
        <input class="form-control me-2 new-connection" type="text"
          placeholder="xch1hheexed9apm4cpln96gk2epkv850y357rkmgwhhst4evu84vpwxqldw3vg" id="newBalanceAddress">
      </div>
      <div class="col-2">
        <button class="btn btn-outline-success text-right" id="btnWalletBalanceAdd">
          <%= __('general.addNew') %>
        </button>
      </div>
    </div>
    <p></p>
  </div>
</div>
<div class="page-wrapper">
  <nav class="navbar navbar-expand navbar-light bg-light">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="nav nav-tabs">
          <% data.forEach(function(dt, index){ %>
            <li class="nav-item">
              <a class="nav-link nav-tab <%= index === 0 ? 'active' : '' %> <%= dt.status %>" href="#"
                data-tabp-index="<%= index %>"><span>
                  <%= dt.blockchain %>
                </span><span>
                  <%= index + 1 %>
                </span></a>
            </li>
            <% }); %>
        </ul>
      </div>
    </div>
  </nav>

  <% data.forEach(function(dt, index){ %>
    <div class="tab-panel <%= index === 0 ? '' : 'd-none' %>" data-panel-index="<%= index %>">
      <div><a class="nav-link" target="_blank" href="<%= dt.coldWallet %>">Check
          Farming Rewards Online</a>
        <p>last_update: <%= dt.updatedAt.toLocaleString("en-US", {hour12: false}) %>
        </p>
      </div>
      <div>
        <hr>
        <%- dt.details.replace(/\n/g, "</br>" ) %>
      </div>
      <div class="transferMoney" data-blockchain="<%= dt.blockchain %>" data-hostname="<%= dt.hostname %>">
        <hr>
        <div>
          <span class="formLabel">Recipient Address:</span> <input type="text" class="formInput toAddress">
        </div>
        <div>
          <span class="formLabel">Transfer Amount:</span> <input type="text" class="formInput amount">
        </div>
        <div>
          <span class="formLabel">Your Password:</span> <input type="password" class="formInput password"
            id="exampleInputPassword1" autocomplete="off">
        </div>
        <div>
          <button class="btn btn-outline-danger actionButton tranferButton">Transfer Coins to Others with Secure
            Password</button>
        </div>
      </div>
    </div>
    <% }); %>
</div>